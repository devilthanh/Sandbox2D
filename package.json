{
  "name": "sandbox2d",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/server.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "rsync -avum --exclude='*.ts' --include='*' './src/app' './dist'",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn postbuild\" \"tsc --watch\" \"nodemon -q ts-node dist/server/server.js\"",
    "prod": "yarn build && yarn start",
    "start": "cross-env NODE_ENV=production nodemon dist/server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix",
    "pretty": "prettier --write \"./**/*.{js,jsx,ts,tsx,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^21.0.0",
    "async": "^3.2.4",
    "express": "^4.17.1",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@types/async": "^3.2.20",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.0",
    "@types/websocket": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescipt": "^1.0.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "16.x"
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx}": [
      "npm run pretty",
      "npm run lint"
    ],
    "*.{yml,yaml,json}": [
      "npm run pretty"
    ]
  }
}
